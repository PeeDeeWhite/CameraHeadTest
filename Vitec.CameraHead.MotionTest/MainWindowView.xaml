<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="Vitec.CameraHead.MotionTest.MainWindowView"
        xmlns:local="clr-namespace:Vitec.CameraHead.MotionTest"
        d:DataContext="{d:DesignInstance {x:Type local:MainWindowViewModel}}"
        mc:Ignorable="d"
        Title="Vitec Camera Head Test Utility" 
        Height="450" Width="800"
        d:DesignHeight="450" d:DesignWidth="800" 
        local:ViewModelLocator.AutoWireViewModel="True">
	<Grid>
		<Label Content="Target" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="54.677"/>
		<ComboBox HorizontalAlignment="Left" Margin="70,10,0,0" VerticalAlignment="Top" Width="146" Height="26" SelectedValuePath="Name" ItemsSource="{Binding Path=Studio.Targets}" DisplayMemberPath="Name"/>

	</Grid>
</Window>
